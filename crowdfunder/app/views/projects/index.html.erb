<h1>Crowdfunder Projects</h1>

<strong><%= link_to "New Project", "/projects/new" %></strong>
<br>
<br>

<%= form_tag projects_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>

<div id="projectts">
	<% @projects.each do |project| %>

		<%= link_to project_path(project.id) do %>
			<h2>
				<%= number_to_currency(project.funding_goal) %>
	 		    <%= project.title %>
			</h2>
		<% end %>	 		    

	<p><%= truncate(project.blurb, length: 100) %></p>
	<% end %>
</div>